<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.NewPage1"
             Title="NewPage1">
    <VerticalStackLayout>



        <Label Text="" x:Name="callor_label" FontSize="40"  HorizontalOptions="Center" ToolTipProperties.Text="Число ваших каллорий"/>
        
        <Label Text="Что вы сегодня ели? :)" FontSize="20"  Padding="10" />
        <Picker x:Name="zavtrak"   SelectedIndexChanged="zavtrak_SelectedIndexChanged" FontSize="15" Margin="10">

        </Picker>

        <Label Text="" x:Name="water_count" FontSize="20"  Padding="10" ToolTipProperties.Text="Число выпитой воды"/>

        <Stepper  x:Name="stepper_water" Minimum="0" Maximum="30" Increment="1"  ValueChanged="Stepper_ValueChanged" Margin="10"/>

        

    </VerticalStackLayout>
</ContentPage>