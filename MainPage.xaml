<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">

    <ScrollView>
        <VerticalStackLayout>

            <Picker x:Name="sexPicker" Title="Выберите пол" Margin="10">
                <Picker.Items>
                    <x:String>Мужской</x:String>
                    <x:String>Женский</x:String>
                </Picker.Items>
            </Picker>

            <Entry Placeholder="Введите свой рост" x:Name="ent1" Margin="10"/>
            <Entry Placeholder="Введите свой вес" x:Name="ent2" Margin="10" />
            <Entry Placeholder="Введите свой возраст" x:Name="ent3" Margin="10"/>


            
            <Button Text="Начать" BackgroundColor="black" x:Name="start_button" Clicked="OnSaveClicked" Margin="10" TextColor="white"/>
            
            <Label Text="" x:Name="lab4"/>

            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
